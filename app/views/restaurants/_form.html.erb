<%= form_with(model: restaurant, local: true, class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4") do |form| %>
  <% if restaurant.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
      <strong class="font-bold">
        <%= pluralize(restaurant.errors.count, "error") %> prohibited this restaurant from being saved:
      </strong>
      <ul class="mt-2 list-disc list-inside">
        <% restaurant.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-input" %>
  </div>

  <div class="flex items-center justify-between">
    <%= form.submit class: "btn bg-blue-500 hover:bg-blue-600 text-white" %>
  </div>
<% end %>
