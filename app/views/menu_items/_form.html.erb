<%= form_with(url: @menu_item.new_record? ? dashboard_menu_items_path(@restaurant) : dashboard_menu_item_path(@restaurant, @menu_item), 
              model: @menu_item, 
              local: false, 
              class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4") do |form| %>

  <div class="mb-4">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-input" %>
  </div>

  <div class="mb-4">
    <%= form.label :price, class: "form-label" %>
    <%= form.number_field :price, step: 0.01, class: "form-input" %>
  </div>

  <div class="mb-6">
    <%= form.label :availability, class: "form-label" %>
    <%= form.select :availability, 
                    MenuItem.availabilities.keys.map { |availability| [availability.titleize, availability] }, 
                    {}, 
                    class: "form-input" %>
  </div>

  <div class="flex items-center justify-between">
    <%= form.submit class: "btn bg-blue-500 hover:bg-blue-600 text-white" %>
    <%= link_to 'Back', dashboard_path(@restaurant), class: "btn" %>
  </div>
<% end %>