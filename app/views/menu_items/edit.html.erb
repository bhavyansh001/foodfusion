<%= turbo_frame_tag "edit_menu_item" do %>
  <div class="max-w-2xl mx-auto px-4 py-8">
    <h1 class="text-2xl font-bold text-gray-800 mb-4">Edit Menu Item</h1>

    <%= turbo_frame_tag "menu_item_#{@menu_item.id}_form" do %>
      <%= render 'form', menu_item: @menu_item, restaurant: @restaurant %>
    <% end %>

    <div class="mt-4">
      <%= link_to 'Back to Restaurant Dashboard', dashboard_path(@restaurant), class: "btn bg-gray-500 hover:bg-gray-600 text-white" %>
    </div>
  </div>
<% end %>
