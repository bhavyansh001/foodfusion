 <div class="max-w-6xl mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-gray-800 mb-8">Owner Dashboard</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @restaurants.each do |restaurant| %>
      <div class="bg-white rounded-lg shadow-md overflow-hidden restaurant-item">
        <%= link_to dashboard_path(restaurant), class: "block p-6 hover:bg-gray-50 transition duration-300" do %>
          <h2 class="text-xl font-semibold text-gray-800 mb-2"><%= restaurant.name %></h2>
          <p class="text-gray-600">View dashboard</p>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="mt-8">
      <%= link_to "Add New Restaurant", new_restaurant_path, class: "btn bg-blue-500 hover:bg-blue-600 text-white" %>
  </div>
</div>