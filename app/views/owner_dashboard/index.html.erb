<%= turbo_stream_from "restaurants" %>

 <div class="max-w-6xl mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-gray-800 mb-8">Owner Dashboard</h1>

  <div id="restaurants" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <%= render @restaurants %>
  </div>

  <%= turbo_frame_tag "new_restaurant" do %>
  <div class="mt-8">
    <%= link_to "Add New Restaurant", new_restaurant_path, class: "btn bg-blue-500 hover:bg-blue-600 text-white" %>
  </div>
<% end %>
</div>