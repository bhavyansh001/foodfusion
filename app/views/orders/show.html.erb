<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Order Details</h1>

  <div class="bg-white shadow-md rounded-lg p-6 mb-6">
    <h2 class="text-2xl font-semibold mb-4">Restaurant: <%= @order.restaurant.name %></h2>
    <h3 class="text-xl font-medium mb-4">Total Price: <%= number_to_currency(@order.total_price) %></h3>
    
    <div class="mb-4">
      <span class="font-semibold">Status:</span>
      <span class="px-2 py-1 rounded-full text-sm
                    <%= order_status_color(@order.status) %>">
        <%= @order.status.capitalize %>
      </span>
    </div>

    <h3 class="text-xl font-medium mb-4">Ordered Items:</h3>
    <ul class="space-y-4">
      <% @order.order_items.each do |order_item| %>
        <li class="border-b pb-4">
          <strong class="text-lg"><%= order_item.menu_item.name %></strong>
          <br>
          Quantity: <%= order_item.quantity %>
          <br>
          Price: <%= number_to_currency(order_item.price) %>
          <br>
          Subtotal: <%= number_to_currency(order_item.quantity * order_item.price) %>
        </li>
      <% end %>
    </ul>
  </div>

  <% if current_user.owner? %>
    <%= render 'order_status_buttons', order: @order %>
  <% end %>
</div>