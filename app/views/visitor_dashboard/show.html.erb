<h1>Your Dashboard</h1>

<section>
  <h2>Active Orders</h2>
  <% @active_orders.each do |order| %>
    <div>
      <p>Order #<%= order.id %> from <%= order.restaurant.name %></p>
      <p>Status: <%= order.status.capitalize %></p>
      <p>Total: <%= number_to_currency(order.total_price) %></p>
    </div>
  <% end %>
</section>

<section>
  <h2>Order History</h2>
  <% @order_history.each do |order| %>
    <div>
      <p>Order #<%= order.id %> from <%= order.restaurant.name %></p>
      <p>Date: <%= order.created_at.strftime("%B %d, %Y") %></p>
      <p>Status: <%= order.status.capitalize %></p>
      <p>Total: <%= number_to_currency(order.total_price) %></p>
    </div>
  <% end %>
</section>

<section>
  <h2>Account Settings</h2>
  <%= link_to "Edit Profile", edit_user_registration_path %>
</section>
