<div class="max-w-6xl mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-gray-800 mb-8">Your Dashboard</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    <section class="bg-white shadow-md rounded-lg p-6">
      <h2 class="text-2xl font-semibold text-gray-800 mb-4">Active Orders</h2>
      <% if @active_orders.any? %>
        <div class="space-y-4">
          <% @active_orders.each do |order| %>
            <div class="border-b border-gray-200 pb-4">
              <div class="flex justify-between items-center mb-2">
                <h3 class="text-lg font-medium text-gray-800">Order #<%= order.id %></h3>
                <span class="px-2 py-1 rounded-full text-sm <%= order_status_color(order.status) %>">
                  <%= order.status.capitalize %>
                </span>
              </div>
              <p class="text-gray-600"><%= order.restaurant.name %></p>
              <p class="text-gray-800 font-semibold mt-2">Total: <%= number_to_currency(order.total_price) %></p>
              <%= link_to "View Details", order_path(order), class: "btn mt-2 inline-block" %>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-600">You have no active orders.</p>
      <% end %>
    </section>

    <section class="bg-white shadow-md rounded-lg p-6">
      <h2 class="text-2xl font-semibold text-gray-800 mb-4">Order History</h2>
      <% if @order_history.any? %>
        <div class="space-y-4">
          <% @order_history.each do |order| %>
            <div class="border-b border-gray-200 pb-4">
              <div class="flex justify-between items-center mb-2">
                <h3 class="text-lg font-medium text-gray-800">Order #<%= order.id %></h3>
                <span class="text-sm text-gray-500"><%= order.created_at.strftime("%B %d, %Y") %></span>
              </div>
              <p class="text-gray-600"><%= order.restaurant.name %></p>
              <p class="text-gray-800 font-semibold mt-2">Total: <%= number_to_currency(order.total_price) %></p>
              <%= link_to "View Details", order_path(order), class: "btn mt-2 inline-block" %>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-600">You have no order history.</p>
      <% end %>
    </section>
  </div>

  <section class="mt-8 bg-white shadow-md rounded-lg p-6">
    <h2 class="text-2xl font-semibold text-gray-800 mb-4">Account Settings</h2>
    <div class="space-y-4">
      <%= link_to "Edit Profile", edit_user_registration_path, class: "btn block text-center" %>
    </div>
  </section>
</div>